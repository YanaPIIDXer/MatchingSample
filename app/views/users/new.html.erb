<%= render partial: "application/pageheader", locals: {pageTitle: "ユーザ登録"} %>

<%= form_for(@user) do |f| %>
    <%= f.label "ユーザＩＤ" %><br />
    <%= f.text_field :user_id %>
    <br />

    <%= f.label "パスワード" %><br />
    <%= f.password_field :password %>
    <br />

    <%= f.label "ユーザ名" %><br />
    <%= f.text_field :name %>
    <br />

    <%= f.label "年齢" %><br />
    <%= f.number_field :age %>
    <br />

    <%= f.label "紹介文" %><br />
    <%= f.text_area :detail %>
    <br />

    <%= f.submit "登録" %>
    <br />
<% end %>

<br />
<%= link_to "トップページに戻る", root_path, :class => "link" %><br />
